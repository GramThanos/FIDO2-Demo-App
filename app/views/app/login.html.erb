
<div class="container">
	<div class="row">
		<!-- Login -->
		<div class="col-12" style="padding-top: 25px;padding-bottom: 25px;">
			<h4>Login Form</h4>
			<form method="POST">
				<div class="form-group">
					<label for="username-or-email">Username or Email</label>
					<input type="text" class="form-control" id="username-or-email" name="username-or-email">
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" class="form-control" id="password" name="password">
				</div>
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<% if @message_error %>
					<div class="alert alert-danger" role="alert">
						<%= @message_error %>
					</div>
				<% end %>
				<button type="submit" class="btn btn-primary" id="login-btn">Login</button>
				<a href="<%= url_for({:action => 'loginfido'}) %>" class="btn btn-light">Login with FIDO</a>
			</form>
		</div>
	</div>
</div>
